rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isLikingOrUnliking() {
      // The symmetric difference between the old and new 'likedBy' sets
      // should contain only the current user's UID.
      let diff = request.resource.data.likedBy.toSet().symmetricDifference(resource.data.likedBy.toSet());
      return diff.size() == 1 && diff.has(request.auth.uid);
    }

    // Rule for user profiles
    // Anyone can read a profile, but only the user themselves can edit it.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for posts
    match /posts/{postId} {
      // Anyone can read posts.
      allow read: if true;

      // Only the post's author can create or delete it.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Update logic:
      // 1. The author can update any field.
      // 2. Any other authenticated user can ONLY like/unlike, which updates 'likedBy' and 'updatedAt'.
      allow update: if request.auth != null && (
        (resource.data.userId == request.auth.uid) || 
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy', 'updatedAt']) &&
          isLikingOrUnliking() &&
          request.resource.data.updatedAt == request.time
        )
      );
    }
  }
}
