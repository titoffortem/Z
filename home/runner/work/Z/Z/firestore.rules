rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Correctly implements symmetric difference to check if a user is only adding/removing their own UID.
    function isLikingOrUnliking() {
      // Ensure the fields exist and are lists
      return request.resource.data.likedBy is list
        && resource.data.likedBy is list
        && (
          // Compute the sets
          let newSet = request.resource.data.likedBy.toSet();
          let oldSet = resource.data.likedBy.toSet();
          // The symmetric difference is (A union B) minus (A intersect B)
          let symDifference = newSet.union(oldSet).difference(newSet.intersection(oldSet));
          // The difference must contain exactly one item, which is the current user's UID
          return symDifference.size() == 1 && symDifference.has(request.auth.uid);
        );
    }

    // Rule for user profiles
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for posts
    match /posts/{postId} {
      // Anyone can read posts.
      allow read: if true;

      // Only the post's author can create or delete it.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Update logic:
      // 1. The author can update any field.
      // 2. Any other authenticated user can ONLY like/unlike, which updates 'likedBy' and 'updatedAt'.
      allow update: if request.auth != null && (
        (resource.data.userId == request.auth.uid) || 
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy', 'updatedAt']) &&
          isLikingOrUnliking() &&
          request.resource.data.updatedAt == request.time
        )
      );
    }
  }
}
