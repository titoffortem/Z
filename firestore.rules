rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This single, global rule allows any authenticated user to read or write
    // to any document or subcollection. This is for debugging purposes to isolate
    // whether the issue is with rules logic or something else (like indexing).
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
