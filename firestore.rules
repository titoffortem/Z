rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Правила для профилей
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Правила для постов
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Правило для лайков
      allow update: if request.auth != null;
    }

    // Правила для комментариев (вложенная коллекция)
    match /posts/{postId}/comments/{commentId} {
      allow read: if true;
      // Создавать комменты могут только авторизованные пользователи
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Удалять комменты может только автор
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Лайк/дизлайк комментария: разрешаем только изменение поля likedBy.
      // request.writeFields корректно работает и для arrayUnion/arrayRemove.
      allow update: if request.auth != null
        && request.writeFields.hasOnly(['likedBy']);
    }
    

    // Каналы и посты каналов
    match /channels/{channelId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.creatorId == request.auth.uid;
      allow update: if request.auth != null && (
        resource.data.creatorId == request.auth.uid ||
        request.writeFields.hasOnly(['subscriberIds', 'updatedAt'])
      );

      match /posts/{postId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null &&
          get(/databases/$(database)/documents/channels/$(channelId)).data.creatorId == request.auth.uid &&
          request.resource.data.authorId == request.auth.uid;
        allow update: if request.auth != null && request.writeFields.hasOnly(['likedBy']);
        allow delete: if false;
      }


      match /posts/{postId}/comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
        allow update: if request.auth != null
          && request.writeFields.hasOnly(['likedBy']);
      }
    }

    // Если у тебя есть чаты (коллекция chats)
    match /chats/{chatId}/{allChildren=**} {
      allow read, write: if request.auth != null;
    }
  }
}
