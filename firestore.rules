rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Правила для профилей
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Правила для постов и всего, что внутри них
    // {allChildren=**} — это ключ к тому, чтобы заработали комментарии!
    match /posts/{postId}/{allChildren=**} {
      
      allow read: if true;

      // Создавать посты может только автор
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Удалять посты может только автор
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // ТВОЕ РАБОЧЕЕ ПРАВИЛО ДЛЯ ЛАЙКОВ:
      // Теперь оно работает и для самих постов, и для вложенных комментов
      allow update: if request.auth != null;
    }
    
    // Если у тебя есть чаты (коллекция chats)
    match /chats/{chatId}/{allChildren=**} {
      allow read, write: if request.auth != null;
    }
  }
}
