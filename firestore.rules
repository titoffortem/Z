rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Правила для профилей
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Правила для постов
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Правило для лайков
      allow update: if request.auth != null;
    }

    // Правила для комментариев (вложенная коллекция)
    match /posts/{postId}/comments/{commentId} {
      allow read: if true;
      // Создавать комменты могут только авторизованные пользователи
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Удалять комменты может только автор
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Обновлять комментарии могут авторизованные пользователи.
      // Ограничение только на likedBy в некоторых случаях приводило к
      // "Missing or insufficient permissions" при лайке комментария.
      allow update: if request.auth != null;
    }
    
    // Если у тебя есть чаты (коллекция chats)
    match /chats/{chatId}/{allChildren=**} {
      allow read, write: if request.auth != null;
    }
  }
}
